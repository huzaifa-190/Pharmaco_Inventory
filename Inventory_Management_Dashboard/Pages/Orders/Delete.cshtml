@page
@model Inventory_Management_Dashboard.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold text-red-700 mb-6">Delete Order</h1>

    <p class="text-gray-700 mb-4">Are you sure you want to delete this order?</p>

    <div class="space-y-2">
        <div><strong>Quantity:</strong> @Model.Order.Quantity</div>
        <div><strong>Order Date:</strong> @Model.Order.OrderDate.ToString("yyyy-MM-dd")</div>
        <div><strong>Total Price:</strong> @String.Format("{0:C}", Model.Order.TotalPrice)</div>
        <div><strong>Product:</strong> @Model.Order.Product?.Name</div>
        <div><strong>User:</strong> @Model.Order.User?.Email</div>
    </div>

    <form method="post" class="mt-6 flex space-x-4">
        <input type="hidden" asp-for="Order.OrderId" />
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">Delete</button>
        <a asp-page="./Index" class="text-gray-600 hover:underline">Cancel</a>
    </form>
</div>
@section Scripts {
    <script>
        if (typeof lucide !== "undefined") {
            lucide.createIcons();
        } else {
            console.error("Lucide is not loaded.");
        }
    </script>
}

