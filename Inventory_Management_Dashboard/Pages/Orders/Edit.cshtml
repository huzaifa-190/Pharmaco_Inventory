@page
@model Inventory_Management_Dashboard.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold text-green-700 mb-6">Edit Order</h1>

    <form method="post" class="space-y-4">
        <input type="hidden" asp-for="Order.OrderId" />

        <div>
            <label asp-for="Order.Quantity" class="block font-medium text-gray-700">Quantity</label>
            <input asp-for="Order.Quantity" class="mt-1 block w-full border border-gray-300 rounded-lg p-2" />
            <span asp-validation-for="Order.Quantity" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Order.OrderDate" class="block font-medium text-gray-700">Order Date</label>
            <input asp-for="Order.OrderDate" type="date" class="mt-1 block w-full border border-gray-300 rounded-lg p-2" />
            <span asp-validation-for="Order.OrderDate" class="text-red-600 text-sm"></span>
        </div>

        

        <div>
            <label asp-for="Order.ProductId" class="block font-medium text-gray-700">Product</label>
            <select asp-for="Order.ProductId" asp-items="Model.ProductList" class="mt-1 block w-full border border-gray-300 rounded-lg p-2"></select>
            <span asp-validation-for="Order.ProductId" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Order.UserId" class="block font-medium text-gray-700">User</label>
            <select asp-for="Order.UserId" asp-items="Model.UserList" class="mt-1 block w-full border border-gray-300 rounded-lg p-2"></select>
            <span asp-validation-for="Order.UserId" class="text-red-600 text-sm"></span>
        </div>

        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">Save Changes</button>
        <a asp-page="./Index" class="ml-2 text-gray-600 hover:underline">Cancel</a>
    </form>
</div>



@section Scripts {
    <script>
        if (typeof lucide !== "undefined") {
            lucide.createIcons();
        } else {
            console.error("Lucide is not loaded.");
        }
    </script>
}
