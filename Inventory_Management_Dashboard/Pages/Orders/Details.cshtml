@page
@model Inventory_Management_Dashboard.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold text-green-700 mb-6">Order Details</h1>

    <div class="space-y-4">
        <div><strong>Quantity:</strong> @Model.Order.Quantity</div>
        <div><strong>Order Date:</strong> @Model.Order.OrderDate.ToString("yyyy-MM-dd")</div>
        <div><strong>Total Price:</strong> @String.Format("{0:C}", Model.Order.TotalPrice)</div>
        <div><strong>Product:</strong> @Model.Order.Product?.Name</div>
        <div><strong>User:</strong> @Model.Order.User?.Email</div>
    </div>

    <div class="mt-6 flex space-x-4">
        <a asp-page="./Edit" asp-route-id="@Model.Order.OrderId" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">Edit</a>
        <a asp-page="./Index" class="text-gray-600 hover:underline">Back to List</a>
    </div>
</div>

@section Scripts {
    <script>
        if (typeof lucide !== "undefined") {
            lucide.createIcons();
        } else {
            console.error("Lucide is not loaded.");
        }
    </script>
}

