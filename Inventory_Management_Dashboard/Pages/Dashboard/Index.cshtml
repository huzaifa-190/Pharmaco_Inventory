@page
@model Inventory_Management_Dashboard.Pages.Dashboard.IndexModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mx-auto px-4 py-6 space-y-6 ">

    <h1 class="text-3xl font-bold text-green-700 mb-4">Dashboard Overview</h1>

    <!-- Top Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Revenue -->
        <a asp-page="/Reports/Index" class="block bg-green-500 text-white p-4 rounded-lg shadow hover:bg-green-600 transition">
            <h2 class="text-xl font-semibold">Total Revenue</h2>
            <p class="text-3xl font-bold mt-2">@String.Format("{0:C}", Model.TotalRevenue)</p>
        </a>

        <!-- Orders -->
        <a asp-page="/Orders/Index" class="block bg-blue-500 text-white p-4 rounded-lg shadow hover:bg-blue-600 transition">
            <h2 class="text-xl font-semibold">Total Orders</h2>
            <p class="text-3xl font-bold mt-2">@Model.TotalOrders</p>
        </a>

        <!-- Low Stock -->
        <a asp-page="/Products/Index" class="block bg-red-400 text-white p-4 rounded-lg shadow hover:bg-red-500 transition">
            <h2 class="text-xl font-semibold">Low Stock Products</h2>
            <p class="text-3xl font-bold mt-2">@Model.LowStockCount</p>
        </a>

        <!-- Top Product -->
        <a asp-page="/Products/Index" class="block bg-yellow-500 text-white p-4 rounded-lg shadow hover:bg-yellow-600 transition">
            <h2 class="text-xl font-semibold">Top Product</h2>
            <p class="text-lg font-bold mt-2">@Model.TopProductName</p>
        </a>
    </div>



    <!-- Sales Trend Chart -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-2xl font-semibold text-green-700 mb-4">Sales Trend</h2>
        <canvas id="salesChart"></canvas>
    </div>

    <!-- Top Selling Products Chart -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-2xl font-semibold text-green-700 mb-4">Top Selling Products</h2>
        <canvas id="topProductsChart"></canvas>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        const salesChart = new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.SalesDates)),
                datasets: [{
                    label: 'Total Sales',
                    data: @Html.Raw(Json.Serialize(Model.SalesTotals)),
                    backgroundColor: 'rgba(34,197,94,0.2)',
                    borderColor: 'rgba(34,197,94,1)',
                    borderWidth: 2,
                    tension: 0.3,
                    fill: true
                }]
            }
        });

        const topProductsCtx = document.getElementById('topProductsChart').getContext('2d');
        const topProductsChart = new Chart(topProductsCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.TopProductNames)),
                datasets: [{
                    label: 'Quantity Sold',
                    data: @Html.Raw(Json.Serialize(Model.TopProductQuantities)),
                    backgroundColor: 'rgba(34,197,94,0.8)',
                    borderRadius: 6
                }]
            }
        });
    </script>

    <script>
        if (typeof lucide !== "undefined") {
            lucide.createIcons();
        } else {
            console.error("Lucide is not loaded.");
        }
    </script>
}
