@page "{id:int}"
@model Inventory_Management_Dashboard.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold text-green-700 mb-6">Edit Product</h1>

    <form method="post" class="space-y-4">

        <input type="hidden" asp-for="Product.ProductId" />

        <div>
            <label asp-for="Product.Name" class="block font-medium text-gray-700">Name</label>
            <input asp-for="Product.Name" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:ring-green-500 focus:border-green-500" />
            <span asp-validation-for="Product.Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Product.Description" class="block font-medium text-gray-700">Description</label>
            <textarea asp-for="Product.Description" rows="3" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:ring-green-500 focus:border-green-500"></textarea>
            <span asp-validation-for="Product.Description" class="text-red-500 text-sm"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="Product.UnitPrice" class="block font-medium text-gray-700">Unit Price</label>
                <input asp-for="Product.UnitPrice" type="number" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Product.UnitPrice" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Product.StockQuantity" class="block font-medium text-gray-700">Stock Quantity</label>
                <input asp-for="Product.StockQuantity" type="number" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Product.StockQuantity" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div>
            <label asp-for="Product.ImageURL" class="block font-medium text-gray-700">Image URL</label>
            <input asp-for="Product.ImageURL" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:ring-green-500 focus:border-green-500" />
            <span asp-validation-for="Product.ImageURL" class="text-red-500 text-sm"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="Product.CategoryId" class="block font-medium text-gray-700">Category</label>
                <select asp-for="Product.CategoryId" asp-items="Model.CategoryOptions" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:ring-green-500 focus:border-green-500"></select>
            </div>

            <div>
                <label asp-for="Product.SupplierId" class="block font-medium text-gray-700">Supplier</label>
                <select asp-for="Product.SupplierId" asp-items="Model.SupplierOptions" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:ring-green-500 focus:border-green-500"></select>
            </div>
        </div>

        <div class="flex space-x-4">
            <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">Update</button>
            <a asp-page="./Index" class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 transition">Cancel</a>
        </div>

    </form>
</div>



@section Scripts {
    <script>
        if (typeof lucide !== "undefined") {
            lucide.createIcons();
        } else {
            console.error("Lucide is not loaded.");
        }
    </script>
}