@page
@model Inventory_Management_Dashboard.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}
<div class="max-w-full px-4 py-6  ">

    <h1 class="text-3xl font-bold text-green-700 mb-6">Products</h1>

    <div class="mb-4 flex items-center space-x-3">

        <a asp-page="Create" class="inline-block bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">+ Add New Product</a>
    </div>

    <div class=" rounded-lg shadow">
        <table class="w-full text-left border border-gray-200">
            <thead class="bg-green-100 text-green-800">
                <tr class="h-14">
                    <th class="p-3">Name</th>
                    <th class="p-3">Description</th>
                    <th class="p-3">Unit Price</th>
                    <th class="p-3">Stock Quantity</th>
                    @* <th class="p-3">Image</th> *@
                    <th class="p-3">Category</th>
                    <th class="p-3">Supplier</th>
                    <th class="p-3">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white">
                @foreach (var item in Model.Product)
                {
                    <tr class="border-b hover:bg-green-50 h-16">
                        <td class="p-3">@item.Name</td>
                        <td class="p-3">@item.Description</td>
                        <td class="p-3">@String.Format("{0:C}", item.UnitPrice)</td>
                        <td class="p-3">@item.StockQuantity</td>
                        @* <td class="p-3"> *@
                        @*     <img src="@item.ImageURL" alt="Product Image" class="h-12 w-12 object-cover rounded"> *@
                        @* </td> *@
                        <td class="p-3">@item.Category?.Name</td>
                        <td class="p-3">@item.Supplier?.Email</td>
                        <td class="p-3 h-full">
                            <div class="flex items-center h-full space-x-3">
                                <a asp-page="./Edit" asp-route-id="@item.ProductId" class="text-green-600 hover:text-green-800" title="Edit">
                                    <i data-lucide="edit" class="w-5 h-5"></i>
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.ProductId" class="text-blue-600 hover:text-blue-800" title="Details">
                                    <i data-lucide="info" class="w-5 h-5"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.ProductId" class="text-red-600 hover:text-red-800" title="Delete">
                                    <i data-lucide="trash-2" class="w-5 h-5"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    <script>
        if (typeof lucide !== "undefined") {
            lucide.createIcons();
        } else {
            console.error("Lucide is not loaded.");
        }
    </script>
}


