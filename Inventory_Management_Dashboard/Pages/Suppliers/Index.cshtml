@page
@model Inventory_Management_Dashboard.Pages.Suppliers.IndexModel

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container mx-auto px-4 py-6">

    <h1 class="text-3xl font-bold text-green-700 mb-6">Suppliers</h1>

    <div class="mb-4 flex items-center space-x-3">
        <i data-lucide="users" class="w-6 h-6 text-green-600"></i>

        <a asp-page="Create" class="inline-block bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">+ Add New Supplier</a>
    </div>

    <div class="overflow-x-auto rounded-lg shadow">
        <table class="w-full text-left border border-gray-200">
            <thead class="bg-green-100 text-green-800">
                <tr class="h-14">
                    <th class="p-3">Name</th>
                    <th class="p-3">Phone</th>
                    <th class="p-3">Email</th>
                    <th class="p-3">Address</th>
                    <th class="p-3">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white">
                @foreach (var item in Model.Supplier)
                {
                    <tr class="border-b hover:bg-green-50 h-16">
                        <td class="p-3">@item.Name</td>
                        <td class="p-3">@item.Phone</td>
                        <td class="p-3">@item.Email</td>
                        <td class="p-3">@item.Address</td>
                        <td class="p-3 h-full">
                            <div class="flex items-center h-full space-x-3">
                                <a asp-page="./Edit" asp-route-id="@item.SupplierId" class="text-green-600 hover:text-green-800" title="Edit">
                                    <i data-lucide="edit" class="w-5 h-5"></i>
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.SupplierId" class="text-blue-600 hover:text-blue-800" title="Details">
                                    <i data-lucide="info" class="w-5 h-5"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.SupplierId" class="text-red-600 hover:text-red-800" title="Delete">
                                    <i data-lucide="trash-2" class="w-5 h-5"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<!-- Lucide Icons Script -->
<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();
</script>



