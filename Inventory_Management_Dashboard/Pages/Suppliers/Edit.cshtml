@page
@model Inventory_Management_Dashboard.Pages.Suppliers.EditModel

@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="container mx-auto px-4 py-6">

    <h1 class="text-3xl font-bold text-green-700 mb-6">Edit Supplier</h1>

    <form method="post" class="space-y-4">
        <input type="hidden" asp-for="Supplier.SupplierId" />

        <div>
            <label asp-for="Supplier.Name" class="block font-medium text-gray-700">Name</label>
            <input asp-for="Supplier.Name" class="w-full border rounded-lg p-2" />
            <span asp-validation-for="Supplier.Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Supplier.Phone" class="block font-medium text-gray-700">Phone</label>
            <input asp-for="Supplier.Phone" class="w-full border rounded-lg p-2" />
            <span asp-validation-for="Supplier.Phone" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Supplier.Email" class="block font-medium text-gray-700">Email</label>
            <input asp-for="Supplier.Email" class="w-full border rounded-lg p-2" />
            <span asp-validation-for="Supplier.Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Supplier.Address" class="block font-medium text-gray-700">Address</label>
            <input asp-for="Supplier.Address" class="w-full border rounded-lg p-2" />
            <span asp-validation-for="Supplier.Address" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">Update</button>
        <a asp-page="./Index" class="ml-3 text-gray-600 hover:text-gray-800">Cancel</a>
    </form>

</div>



