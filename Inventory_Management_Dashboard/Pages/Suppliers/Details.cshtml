@page
@model Inventory_Management_Dashboard.Pages.Suppliers.DetailsModel

@{
    ViewData["Title"] = "Supplier Details";
}

<div class="container mx-auto px-4 py-6">

    <h1 class="text-3xl font-bold text-green-700 mb-6">Supplier Details</h1>

    <div class="space-y-4">
        <div>
            <span class="font-medium text-gray-700">Name:</span>
            <span class="ml-2">@Model.Supplier.Name</span>
        </div>

        <div>
            <span class="font-medium text-gray-700">Phone:</span>
            <span class="ml-2">@Model.Supplier.Phone</span>
        </div>

        <div>
            <span class="font-medium text-gray-700">Email:</span>
            <span class="ml-2">@Model.Supplier.Email</span>
        </div>

        <div>
            <span class="font-medium text-gray-700">Address:</span>
            <span class="ml-2">@Model.Supplier.Address</span>
        </div>

        <div class="pt-4">
            <a asp-page="./Edit" asp-route-id="@Model.Supplier.SupplierId" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">Edit</a>
            <a asp-page="./Index" class="ml-3 text-gray-600 hover:text-gray-800">Back to List</a>
        </div>
    </div>

</div>



