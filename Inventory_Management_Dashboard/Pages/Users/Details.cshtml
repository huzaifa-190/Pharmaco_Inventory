@page
@model Inventory_Management_Dashboard.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Admin Details";
}

<div class="container mx-auto px-4 py-6">

    <h1 class="text-3xl font-bold text-green-700 mb-6">Admin Details</h1>

    <div class="space-y-4">
        <p><strong>Full Name:</strong> @Model.User.FullName</p>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Password:</strong> @Model.User.Password</p>
        <p><strong>Role:</strong> @Model.User.Role</p>
    </div>

    <div class="mt-6">
        <a asp-page="./Index" class="text-gray-600 hover:underline">Back to List</a>
    </div>

</div>
@section Scripts {
    <script>
        if (typeof lucide !== "undefined") {
            lucide.createIcons();
        } else {
            console.error("Lucide is not loaded.");
        }
    </script>
}