@page
@model Inventory_Management_Dashboard.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Add Admin";
}

<div class="container mx-auto px-4 py-6">

    <h1 class="text-3xl font-bold text-green-700 mb-6">Add New Admin</h1>

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="User.FullName" class="block font-medium text-gray-700">Full Name</label>
            <input asp-for="User.FullName" class="mt-1 block w-full border border-gray-300 rounded-lg p-2" />
            <span asp-validation-for="User.FullName" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="User.Email" class="block font-medium text-gray-700">Email</label>
            <input asp-for="User.Email" class="mt-1 block w-full border border-gray-300 rounded-lg p-2" />
            <span asp-validation-for="User.Email" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="User.Password" class="block font-medium text-gray-700">Password</label>
            <input asp-for="User.Password" type="password" class="mt-1 block w-full border border-gray-300 rounded-lg p-2" />
            <span asp-validation-for="User.Password" class="text-red-600 text-sm"></span>
        </div>

        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">Add Admin</button>
        <a asp-page="./Index" class="ml-2 text-gray-600 hover:underline">Cancel</a>
    </form>
</div>
